@{
    ViewData["Title"] = "Пароль сброшен";
    Layout = "_LayoutNoMenu";
}

<div class="borderbox">
    <div class="headbox text-center">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="formbox">
        <section>
            <h4>Ваш пароль сброшен.</h4>
            <p><Пожалуйста, выполните <a asp-action="Login">вход</a>.</p>
            <form asp-action="Index" asp-controller="Home">
                <input type="submit" value="На главную" style="margin-top: 15px;" class="btn btn-default" />
            </form>
        </section>
    </div>
</div>