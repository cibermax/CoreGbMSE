@model CoreGbMSE.Models.Filial

@{
    ViewData["Title"] = "Редактор филиала";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FilialId" />
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">@ViewData["Title"]</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Adress" class="control-label"></label>
                        <input asp-for="Adress" class="form-control" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telephone" class="control-label"></label>
                        @*<input asp-for="Telephone" class="form-control" />*@
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input asp-for="Telephone" class="form-control" type="text" data-mask="" data-inputmask='"mask": "(999) 999-99-99"'>
                        </div>
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                            <label>US phone mask:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input class="form-control" type="text" data-mask="" data-inputmask='"mask": "(999) 999-9999"'>
                            </div>

                        </div>*@

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="@Url.Action("Index","Filials")" class="btn btn-primary pull-right">Назад к списку</a>
                    <button type="submit" class="btn btn-primary pull-right  margin-r-5">Сохранить</button>
                </div>
            </div>
            <!-- /.box -->

        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-mask]').inputmask()
        });
    </script>
}