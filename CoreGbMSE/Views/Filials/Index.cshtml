@model IEnumerable<CoreGbMSE.Data.Filial>

@{
    ViewData["Title"] = "Филиалы";
}

<h3>@ViewData["Title"]</h3>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="tblFilials" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Adress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telephone)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telephone)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                            Операции <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                           <li><a asp-action="Edit" asp-route-id="@item.FilialId">Редактировать</a></li>
                                           <li><a asp-action="Delete" asp-route-id="@item.FilialId">Удалить</a></li>
                                        </ul>
                                    </div>  
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>

@section Scripts{
    <script>
  $(function () {
    $('#tblFilials').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false,
       "language": {

                "url": "Russian.json"

            }
    })
  })
    </script>
}