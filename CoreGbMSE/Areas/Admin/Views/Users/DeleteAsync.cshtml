@model WebUI.Models.ApplicationUser
@{
    ViewData["Title"] = "Вы уверены что хотите удалить пользователя";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewData["Title"]</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.Id)<br />
                @Html.DisplayFor(model => model.Id)
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.UserName)<br />
                @Html.DisplayFor(model => model.UserName)
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.Email)<br />
                @Html.DisplayFor(model => model.Email)
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.PhoneNumber)<br />
                @Html.DisplayFor(model => model.PhoneNumber)
            </div>
        </div>
        <div class="text-right">
            <br />
            <form asp-action="DeleteAsync" method="post">
                <input type="hidden" asp-for="Id" />
                <a href="@Url.Action("Index","Users")" class="btn btn-primary">Назад к списку</a>
                <input type="submit" value="Удалить" class="btn btn-primary" />
            </form>
        </div>

    </div>
    <!-- /.box-body -->
</div>


